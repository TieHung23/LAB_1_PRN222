@model EVDMS.Presentation.Models.ViewModels.CreateAccountViewModel

@{
    ViewData["Title"] = "Tạo tài khoản mới";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                    <option value="">-- Chọn vai trò --</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DealerId" class="control-label"></label>
                <select asp-for="DealerId" class="form-control" asp-items="ViewBag.Dealers">
                    <option value="">-- Không thuộc đại lý nào --</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                <a asp-action="Import" class="btn btn-success">Nhập từ Excel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            const roleDropdown = $('#RoleId');
            const dealerDropdown = $('#DealerId');
            const dealerFormGroup = dealerDropdown.closest('.form-group');

            function toggleDealerRequirement() {
                const selectedRoleText = roleDropdown.find('option:selected').text();

                if (selectedRoleText === "Dealer Staff" || selectedRoleText === "Dealer Manager") {
                    dealerDropdown.prop('disabled', false);
                    dealerFormGroup.show();
                } else {
                    dealerDropdown.val('');
                    dealerDropdown.prop('disabled', true);
                    dealerFormGroup.hide();
                }
            }

            toggleDealerRequirement();

            roleDropdown.on('change', function () {
                toggleDealerRequirement();
            });
        });
    </script>
}