
@model X.PagedList.IPagedList<EVDMS.Core.Entities.Account>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Extensions;

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="DeletedAccounts" class="btn btn-outline-warning me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Xem tài khoản đã xóa">
                <i class="fas fa-trash-alt"></i>
            </a>
            <a asp-action="Create" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Tạo tài khoản mới">
                <i class="fas fa-user-plus"></i>
            </a>
        </div>
    </div>
    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo tên đăng nhập hoặc họ tên..." value="@ViewData["CurrentFilter"]">
            <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i> Tìm kiếm</button>
        </div>
    </form>

    <table class="table table-striped table-bordered">
       
        <thead class="thead-dark">
            <tr>
                <th>Tên đăng nhập</th>
                <th>Họ và tên</th>
                <th>Vai trò</th>
                <th>Đại lý</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@(item.Role?.Name ?? "Chưa có")</td>
                    <td>@(item.Dealer?.Name ?? "N/A")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Vô hiệu hóa</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />


    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchTerm = ViewData["CurrentFilter"] }), new PagedListRenderOptions
        {
            LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                ContainerDivClasses = new string[] { "pagination" }
                })
    </div>
</div>

@section Scripts {
    <script>
        // Script cho tooltip giữ nguyên
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
</div>