@model EVDMS.Presentation.Models.ViewModels.CreateOrderViewModel

@{
    ViewData["Title"] = "Tạo đơn hàng mới";
}

<h1>@ViewData["Title"]</h1>
<p>Điền thông tin dưới đây để tạo một đơn hàng bán xe mới.</p>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers">
                    <option value="">-- Chọn khách hàng --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="InventoryId" class="control-label"></label>
                <select asp-for="InventoryId" class="form-control" asp-items="ViewBag.Inventory">
                    <option value="">-- Chọn xe trong kho --</option>
                </select>
                <span asp-validation-for="InventoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PromotionId" class="control-label"></label>
                <select asp-for="PromotionId" class="form-control" asp-items="ViewBag.Promotions">
                    <option value="">-- Không áp dụng khuyến mãi --</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo đơn hàng" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="SalesDashboard" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>