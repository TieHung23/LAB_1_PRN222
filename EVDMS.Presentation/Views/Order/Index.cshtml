@model X.PagedList.IPagedList<EVDMS.Core.Entities.Order>
@using X.PagedList.Mvc.Core
@using X.PagedList.Extensions;

@{
    ViewData["Title"] = "Danh sách đơn hàng của tôi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Tạo đơn hàng mới
        </a>
    </div>
    <div class="mb-3">
        <a asp-controller="SalesDashboard" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại 
        </a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Khách hàng</th>
                <th>Mẫu xe</th>
                <th>Ngày tạo</th>
                <th>Tổng tiền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Customer.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Inventory.VehicleModel.ModelName)</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>

                    @* --- THÊM DỮ LIỆU GIÁ TIỀN --- *@
                    <td>
                        @if (item.Payment != null)
                        {
                            @item.Payment.FinalPrice.ToString("C0")
                        }
                        else
                        {
                            <span>Chưa có</span>
                        }
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />

    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
        {
            LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                ContainerDivClasses = new string[] { "pagination" }
                })
    </div>
</div>