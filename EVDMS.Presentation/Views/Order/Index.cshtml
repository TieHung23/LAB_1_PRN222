@model X.PagedList.IPagedList<EVDMS.Core.Entities.Order>
@using X.PagedList.Mvc.Core
@using X.PagedList.Extensions;

@{
    ViewData["Title"] = "Danh sách đơn hàng của tôi";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5 text-info">
            <i class="fas fa-shopping-cart"></i> @ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Tạo đơn hàng mới
        </a>
    </div>

    <div class="mb-3">
        <a asp-controller="@ViewBag.BackController" asp-action="Index" class="btn btn-outline-light">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <!-- Orders Table Card -->
    <div class="card shadow-lg border-0 bg-dark text-light">
        <div class="card-header text-white" style="background: linear-gradient(90deg,#00d9ff,#007bff);">
            <i class="fas fa-list"></i> Danh sách đơn hàng
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table mb-0 table-dark table-hover text-center align-middle order-table">
                    <thead>
                        <tr>
                            <th>Khách hàng</th>
                            <th>Mẫu xe</th>
                            <th>Ngày tạo</th>
                            <th>Tổng tiền</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Customer?.FullName</td>
                                    <td>@item.Inventory?.VehicleModel?.ModelName</td>
                                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (item.Payment != null)
                                        {
                                            <span class="badge bg-success p-2 shadow-sm">
                                                @item.Payment.FinalPrice.ToString("C0")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary p-2">Chưa có</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info me-2">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Không có đơn hàng nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-dark">
            <div class="d-flex justify-content-center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                new PagedListRenderOptions
                {
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" },
                    ContainerDivClasses = new[] { "pagination" }
                })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* Dark Table Styling */
        .order-table thead {
            background: #1f1f1f;
            color: #00d9ff;
            font-weight: bold;
        }

        .order-table tbody tr:hover {
            background: #3a3f47;
        }

        .btn-outline-light:hover {
            background: #00d9ff;
            color: #fff;
        }
    </style>
}
