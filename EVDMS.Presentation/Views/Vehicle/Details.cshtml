@model EVDMS.Core.Entities.VehicleModel

@{
    ViewData["Title"] = "Chi tiết xe " + Model.ModelName;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@(Model.ImgUrl ?? "https://via.placeholder.com/600x400.png?text=Cortexa+EV")" class="img-fluid rounded" alt="@Model.ModelName">
        </div>
        <div class="col-md-6">
            <h1 class="display-5">@Model.ModelName</h1>
            <h3 class="text-primary">@Model.Brand</h3>
            <p class="lead">@Model.Description</p>

            <hr />

            <h4>Thông số kỹ thuật</h4>
            <ul class="list-group list-group-flush bg-transparent">
                <li class="list-group-item bg-transparent"><strong>Loại xe:</strong> @Model.VehicleType</li>
                <li class="list-group-item bg-transparent"><strong>Năm sản xuất:</strong> @Model.ReleaseYear</li>
                @if (Model.VehicleConfig != null)
                {
                    <li class="list-group-item bg-transparent"><strong>Màu sắc:</strong> @Model.VehicleConfig.Color</li>
                    <li class="list-group-item bg-transparent"><strong>Nội thất:</strong> @Model.VehicleConfig.InteriorType</li>
                    <li class="list-group-item bg-transparent"><strong>Bảo hành:</strong> @Model.VehicleConfig.WarrantyPeriod tháng</li>
                }
            </ul>

            @if (Model.VehicleConfig != null)
            {
                <div class="mt-3 p-3 rounded" style="background-color: #2c2c2c;">
                    <h4 class="text-white">Giá niêm yết</h4>
                    <h2 class="text-success fw-bold">@Model.VehicleConfig.BasePrice.ToString("C0")</h2>
                </div>
            }

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>