@model EVDMS.Core.Entities.VehicleModel

@{
    ViewData["Title"] = "Chi tiết xe " + Model.ModelName;
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-body p-5">
            <div class="row">
                <div class="col-md-6">
                    <img src="@(Model.ImgUrl ?? "https://via.placeholder.com/600x400.png?text=No+Image")" class="img-fluid rounded shadow" alt="@Model.ModelName">
                </div>
                <div class="col-md-6">
                    <h1 class="display-5">@Model.ModelName</h1>
                    <h3 class="text-primary fw-light">@Model.Brand</h3>
                    <p class="lead">@Model.Description</p>

                    <hr />

                    <h4>Thông số kỹ thuật</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Loại xe:</strong> @Model.VehicleType</li>
                        <li class="list-group-item"><strong>Năm sản xuất:</strong> @Model.ReleaseYear</li>
                        @if (Model.VehicleConfig != null)
                        {
                            <li class="list-group-item"><strong>Màu sắc:</strong> @Model.VehicleConfig.Color</li>
                            <li class="list-group-item"><strong>Nội thất:</strong> @Model.VehicleConfig.InteriorType</li>
                            <li class="list-group-item"><strong>Bảo hành:</strong> @Model.VehicleConfig.WarrantyPeriod tháng</li>
                        }
                    </ul>

                    @if (Model.VehicleConfig != null)
                    {
                        <div class="mt-3 p-3 rounded bg-light border">
                            <h4 class="text-muted">Giá niêm yết</h4>
                            <h2 class="text-success fw-bold">@Model.VehicleConfig.BasePrice.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</h2>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-pencil-alt"></i> Chỉnh sửa</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>