@model X.PagedList.IPagedList<EVDMS.Core.Entities.TestDrive>
@using X.PagedList.Mvc.Core
@using X.PagedList.Extensions

@{
    ViewData["Title"] = "Danh sách lịch lái thử";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 bg-dark text-light">
        <div class="card-header d-flex justify-content-between align-items-center text-white"
             style="background: linear-gradient(90deg,#00d9ff,#007bff);">
            <h3 class="mb-0">
                <i class="fas fa-car-side"></i> @ViewData["Title"]
            </h3>
            <div class="d-flex gap-2">
                <a asp-action="Create" class="btn btn-info text-white">
                    <i class="fas fa-plus"></i> Tạo lịch hẹn mới
                </a>
                <a asp-controller="@ViewBag.BackController" asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table mb-0 table-dark table-hover text-center align-middle testdrive-table">
                    <thead>
                        <tr>
                            <th>Khách hàng</th>
                            <th>Mẫu xe</th>
                            <th>Thời gian hẹn</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Customer?.FullName</td>
                                    <td>@item.VehicleModel?.ModelName</td>
                                    <td>
                                        @if (item.ScheduledDateTime.HasValue)
                                        {
                                            @item.ScheduledDateTime.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa xếp lịch</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsSuccess)
                                        {
                                            <span class="badge bg-success p-2 shadow-sm">Hoàn thành</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark p-2 shadow-sm">Chưa thực hiện</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info me-2">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">Không có lịch lái thử nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-dark">
            <div class="d-flex justify-content-center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                new PagedListRenderOptions
                {
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" },
                    ContainerDivClasses = new[] { "pagination" }
                })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .testdrive-table thead {
            background: #1f1f1f;
            color: #00d9ff;
            font-weight: bold;
        }

        .testdrive-table tbody tr:hover {
            background: #3a3f47;
        }

        .btn-outline-light:hover {
            background: #00d9ff;
            color: #fff;
        }
    </style>
}
