@model EVDMS.Core.Entities.TestDrive

@{
    ViewData["Title"] = "Chi tiết lịch hẹn";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Khách hàng</dt>
        <dd class="col-sm-9">@Model.Customer.FullName</dd>

        <dt class="col-sm-3">Số điện thoại</dt>
        <dd class="col-sm-9">@Model.Customer.PhoneNumber</dd>

        <dt class="col-sm-3">Mẫu xe</dt>
        <dd class="col-sm-9">@Model.VehicleModel.ModelName</dd>

        <dt class="col-sm-3">Thời gian hẹn</dt>
        <dd class="col-sm-9">@Model.ScheduledDateTime.Value.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Trạng thái hiện tại</dt>
        <dd class="col-sm-9">
            @if (Model.IsSuccess)
            {
                <span class="badge bg-success">Đã hoàn thành</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">Chưa thực hiện</span>
            }
        </dd>
    </dl>
</div>

<hr />

@* Form để cập nhật trạng thái *@
<div>
    <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label class="form-label">Cập nhật trạng thái:</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="isSuccess" id="statusSuccess" value="true" checked="@(Model.IsSuccess)">
                <label class="form-check-label" for="statusSuccess">
                    Hoàn thành
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="isSuccess" id="statusPending" value="false" checked="@(!Model.IsSuccess)">
                <label class="form-check-label" for="statusPending">
                    Chưa thực hiện
                </label>
            </div>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </form>
</div>