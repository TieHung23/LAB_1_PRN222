@model IEnumerable<EVDMS.Core.Entities.Account>

@{
    ViewData["Title"] = "Quản lý Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5 text-info">
            <i class="fas fa-user-cog"></i> @ViewData["Title"]
        </h1>
        <div>
            <a asp-controller="StaffManagement" asp-action="Create" class="btn btn-success me-2">
                <i class="fas fa-user-plus"></i> Thêm Staff
            </a>
            <a asp-controller="ManagerDashboard" asp-action="Index" class="btn btn-outline-light">
                <i class="fas fa-arrow-left"></i> Quay lại Dashboard
            </a>
        </div>
    </div>

    <div class="card shadow-lg border-0 bg-dark text-light">
        <div class="card-header text-white" style="background: linear-gradient(90deg,#00d9ff,#007bff);">
            <i class="fas fa-users"></i> Danh sách Staff
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table mb-0 table-dark table-hover text-center align-middle staff-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-user"></i> Tên đăng nhập</th>
                            <th><i class="fas fa-id-card"></i> Họ tên</th>
                            <th><i class="fas fa-user-tag"></i> Role</th>
                            <th><i class="fas fa-toggle-on"></i> Trạng thái</th>
                            <th><i class="fas fa-cogs"></i> Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var acc in Model)
                            {
                                <tr>
                                    <td>@acc.UserName</td>
                                    <td>@acc.FullName</td>
                                    <td>@acc.Role?.Name</td>
                                    <td>
                                        @if (acc.IsDeleted)
                                        {
                                            <span class="badge bg-danger p-2 shadow-sm">Đã khóa</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success p-2 shadow-sm">Hoạt động</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="ManagerDashboard" asp-action="Edit" asp-route-id="@acc.Id"
                                           class="btn btn-sm btn-warning me-2">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a asp-controller="ManagerDashboard" asp-action="Delete" asp-route-id="@acc.Id"
                                           class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Không có staff nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .staff-table thead {
            background: #1f1f1f;
            color: #00d9ff;
            font-weight: bold;
        }

        .staff-table tbody tr:hover {
            background: #3a3f47;
        }

        .btn-outline-light:hover {
            background: #00d9ff;
            border-color: #00d9ff;
            color: #fff;
        }
    </style>
}
