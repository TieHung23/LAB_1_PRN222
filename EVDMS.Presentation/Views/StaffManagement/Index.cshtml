@model IEnumerable<EVDMS.Core.Entities.Account>

@{
    ViewData["Title"] = "Quản lý Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-controller="StaffManagement" asp-action="Create" class="btn btn-primary">Thêm Staff</a>
    </div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Role</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var acc in Model)
                {
                    <tr>
                        <td>@acc.UserName</td>
                        <td>@acc.FullName</td>
                        <td>@acc.Role?.Name</td>
                        <td>
                            @if (acc.IsDeleted)
                            {
                                <span class="badge bg-danger">Đã khóa</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                        </td>
                        <td>
                            <a asp-controller="ManagerDashboard" asp-action="Edit" asp-route-id="@acc.Id"
                               class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-controller="ManagerDashboard" asp-action="Delete" asp-route-id="@acc.Id"
                               class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Không có staff nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
