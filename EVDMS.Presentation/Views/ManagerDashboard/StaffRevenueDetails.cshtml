@model IEnumerable<(EVDMS.Core.Entities.Account Staff, decimal Revenue)>

@{
    ViewData["Title"] = "Doanh thu chi tiết nhân viên";
}

<div class="container mt-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p class="lead">Danh sách doanh thu của từng nhân viên trong đại lý</p>

    <hr class="my-4">

    <div class="card shadow mb-4">
        <div class="card-header py-3 border-left-info">
            <h6 class="m-0 font-weight-bold text-info">Chi tiết doanh thu nhân viên</h6>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered text-light">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên nhân viên</th>
                        <th>Tài khoản</th>
                        <th>Doanh thu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Staff.FullName</td>
                            <td>@item.Staff.UserName</td>
                            <td class="text-success font-weight-bold">
                                @item.Revenue.ToString("C0")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <a asp-controller="ManagerDashboard" asp-action="Index" class="btn btn-secondary">
        ← Quay lại Dashboard
    </a>
</div>

@section Scripts {
    <style>
        body {
            background-color: #2c2c2c;
            color: #f8f9fa;
        }

        .card {
            background-color: #343a40;
            border: 1px solid #444;
            color: #f8f9fa;
        }

        .border-left-info {
            border-left: .25rem solid #00d9ff !important;
        }

        .table-hover tbody tr:hover {
            background-color: #3a3f47;
        }

        .thead-dark {
            background-color: #444;
            color: #f8f9fa;
        }
    </style>
}
